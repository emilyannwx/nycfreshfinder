<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NYC Fresh Finder | Compare</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <!--Mobile-->
    <input type="checkbox" id="menu">
    <!--Mobile-->
    <header>
        <div class="logo">
            <img src="/imgs/Globe_logo.png" alt="Globe Logo">
            <h1>NYC Fresh Finder</h1>
        </div>

        <!--Mobile-->
        <label for="menu">
            <div></div>
            <div></div>
            <div></div>
        </label>
        <!--Mobile-->
        <nav>
            <a href="/">Home</a>
            <a href="/map">Map</a>
            <a href="/analysis">Analysis</a>
            <a href="/compare">Compare</a>
            <a href="/resources">Resources</a>
        </nav>
    </header>

    <main>
        <section class="search">
            <form>
                <div class="searchbar">
                    <img src="/imgs/search.svg">
                    <input id="search-bar" class="search-input" type="search" placeholder="Search for a food item...">
                </div>
            </form>
        </section>

        <section class="price-filter" style="text-align:center; margin: 1rem 0;">
            <label>
                Min Price: $
                <input type="number" id="min-price" step="0.01" placeholder="0.00">
            </label>
            <label style="margin-left: 1rem;">
                Max Price: $
                <input type="number" id="max-price" step="0.01" placeholder="5.00">
            </label>
        </section>

        <section class="add-item-section">
            <button id="add-item-btn" class="add-btn">Add New Item</button>
        </section>

        <section class="items" id="items-container"></section>
    </main>
    
    <footer>
        <p>&copy; 2025 NYC Fresh Finder</p>
    </footer>

    <div class="add-item">
        <div class="popup-content">
            <span class="close-popup">&times;</span>
            <form method="post" action="/api/add_food_item" id="add-item-form">
                <h2>Add New Item</h2>
                <input type="text" id="item-name" placeholder="Item Name" name="itemName" required>
                <input type="number" id="item-price" min="0" step="0.01" placeholder="Price" name="price" required>
                <input type="text" id="item-location" placeholder="Store Location" name="location" required>
                <button type="submit" class="submit-btn">Add Item</button>
            </form>
        </div>
    </div>
</body>
</html>